{
  "name": "action-item-extractor",
  "version": "1.0.0",
  "description": "Intelligent action item extraction from Outlook and Teams",
  "main": "src/main.js",
  "scripts": {
    "start": "webpack serve --mode development",
    "electron": "concurrently \"npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-dev": "NODE_ENV=development electron .",
    "build": "webpack --mode production && electron-builder",
    "build:win": "webpack --mode production && electron-builder --win",
    "pack": "electron-builder --dir",
    "test": "jest",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx"
  },
  "keywords": [
    "electron",
    "outlook",
    "teams",
    "wrike",
    "ai",
    "productivity"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "@types/node": "^20.8.0",
    "assert": "^2.1.0",
    "babel-loader": "^9.1.3",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.52.0",
    "events": "^3.3.0",
    "global": "^4.4.0",
    "html-webpack-plugin": "^5.5.4",
    "jest": "^29.7.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "style-loader": "^3.3.3",
    "typescript": "^5.2.0",
    "util": "^0.12.5",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.0",
    "@mui/material": "^5.14.0",
    "axios": "^1.5.0",
    "date-fns": "^2.30.0",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.16.0"
  },
  "build": {
    "appId": "com.actionitemextractor.app",
    "productName": "Action Item Extractor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
