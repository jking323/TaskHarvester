# Action Item Extractor Configuration
# Copy this file to backend/.env and update with your actual values

# Database Configuration
DATABASE_URL=sqlite:///./action_items.db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Microsoft Graph API Configuration
# See docs/AZURE_AD_SETUP.md for detailed setup instructions
# Get these values from Azure App Registration:
MICROSOFT_CLIENT_ID=your_application_client_id_from_azure_ad
MICROSOFT_CLIENT_SECRET=your_client_secret_value_from_azure_ad

# Tenant Configuration:
# - Use 'common' for multi-tenant apps (users from any organization)
# - Use 'organizations' for any organizational account
# - Use your specific tenant ID for single-tenant apps
MICROSOFT_TENANT_ID=common

# OAuth Redirect URI (must match Azure AD registration exactly)
# Development:
MICROSOFT_REDIRECT_URI=http://localhost:8000/api/auth/microsoft/callback
# Production example:
# MICROSOFT_REDIRECT_URI=https://yourdomain.com/api/auth/microsoft/callback

# Optional: Custom authority URL (auto-generated if not provided)
# MICROSOFT_AUTHORITY_URL=https://login.microsoftonline.com/common

# Wrike API Configuration
# Register your app at: https://www.wrike.com/frontend/apps/index.html
WRIKE_CLIENT_ID=your_wrike_application_client_id
WRIKE_CLIENT_SECRET=your_wrike_application_client_secret

# Wrike OAuth Redirect URI
# Development:
WRIKE_REDIRECT_URI=http://localhost:8000/api/auth/wrike/callback
# Production example:
# WRIKE_REDIRECT_URI=https://yourdomain.com/api/auth/wrike/callback

# AI Model Configuration
AI_CONFIDENCE_THRESHOLD=0.7
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Processing Configuration
EMAIL_CHECK_INTERVAL=300
TEAMS_CHECK_INTERVAL=300
MAX_CONTENT_LENGTH=10000

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO